{
  "name": "@xtest/sandbox",
  "version": "0.0.46",
  "description": "Ethereum sandbox server for ChainSpin framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean; tsc",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "prepare": "npm run build",
    "test": "nyc ./node_modules/.bin/ava"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.3.2",
    "@types/supertest": "^2.0.4",
    "ava": "1.0.0-beta.6",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "ganache-cli": "^6.1.8"
  }
}
